<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget">
        <item name="android:background">@color/white</item>
        <item name="background">@color/white</item>
    </style>

    <style name="Widget.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_menu_item_tint_selector</item>
        <item name="itemTextAppearance">@style/Widget.BottomNavigationView.ItemText</item>
        <item name="itemTextAppearanceActive">@style/Widget.BottomNavigationView.ItemText.Active
        </item>
        <item name="itemTextAppearanceInactive">
            @style/Widget.BottomNavigationView.ItemText.Inactive
        </item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Widget.BottomNavigationView.ItemText">
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="Widget.BottomNavigationView.ItemText.Active">
        <item name="android:textColor">@color/status_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.BottomNavigationView.ItemText.Inactive">
        <item name="android:textColor">@color/nav_text_blue</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/secondary_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="Widget.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/secondary_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">16sp</item>
        <item name="strokeColor">@color/secondary_blue</item>
    </style>

</resources>
