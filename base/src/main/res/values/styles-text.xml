<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="android:textColor">@color/status_blue</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Text.Header">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">26sp</item>
    </style>

    <style name="Text.Label">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="Text.Label.Strong">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Label.Small">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="Text.SectionTitle">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
